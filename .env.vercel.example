# Vercel 배포용 환경 변수 예시
# Vercel 대시보드의 Environment Variables에서 설정

# Application
NODE_ENV=production
API_PREFIX=api
VERCEL=1

# Database (Vercel에서는 외부 PostgreSQL 서비스 사용)
# 예: Supabase, Railway, PlanetScale 등
DB_HOST=your-postgres-host.com
DB_PORT=5432
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password
DB_DATABASE=your-db-name
DB_SSL=true

# JWT - 프로덕션에서는 강력한 시크릿 사용
JWT_SECRET=your-production-jwt-secret-min-32-characters
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-production-refresh-secret-min-32-characters
JWT_REFRESH_EXPIRATION=30d

# CORS - 프로덕션 도메인으로 설정
CORS_ORIGIN=https://your-frontend-domain.vercel.app

# Redis (선택사항 - Upstash Redis 사용 권장)
# REDIS_HOST=your-redis-host.upstash.io
# REDIS_PORT=6380
# REDIS_PASSWORD=your-redis-password

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Swagger - 프로덕션에서는 비활성화 권장
SWAGGER_ENABLED=false
SWAGGER_PATH=api/docs

# Logging - 프로덕션에서는 error, warn만
LOG_LEVEL=warn

# OAuth - 프로덕션 콜백 URL로 설정
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-api-domain.vercel.app/auth/google/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=https://your-api-domain.vercel.app/auth/github/callback

# Frontend URL - 프로덕션 도메인으로 설정
FRONTEND_URL=https://your-frontend-domain.vercel.app